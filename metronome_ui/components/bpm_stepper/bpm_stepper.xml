<component>
	<previews>
		<preview width="480" height="480" style_bg_color="0xDADDE5" />
	</previews>

	<styles>
		<style name="style_main" bg_color="0x495465" border_width="0" />
		<style name="no_style" bg_opa="0" border_width="0" pad_all="0" />
		<style name="style_button" bg_opa="0" shadow_opa="0" text_color="0x495465" />
	</styles>

	<view width="400" height="141" scrollable="false">
		<style name="no_style" />

		<lv_button width="70" align="left_mid">
			<style name="style_button" />
			<lv_label text="-" style_text_font="font_gemunu_light_110" align="center" />
			<subject_increment_event subject="subject_bpm" step="-1" trigger="clicked" rollover="false" />
		</lv_button>

		<lv_label bind_text="subject_bpm" style_text_font="font_gemunu_light_130" align="center" />
		<lv_label
			text="BPM"
			style_text_font="font_oxanium_semibold_20"
			style_text_color="0x878F9A"
			align="bottom_mid"
			y="5"
		/>

		<lv_button width="70" align="right_mid">
			<style name="style_button" />
			<lv_label text="+" style_text_font="font_gemunu_light_110" align="center" />
			<subject_increment_event subject="subject_bpm" step="1" trigger="clicked" rollover="false" />
		</lv_button>
	</view>
</component>
